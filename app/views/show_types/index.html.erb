<p id="notice"><%= notice %></p>

<h1>Show Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_types.each do |show_type| %>
      <tr>
        <td><%= show_type.name %></td>
        <td><%= link_to 'Show', show_type %></td>
        <td><%= link_to 'Edit', edit_show_type_path(show_type) %></td>
        <td><%= link_to 'Destroy', show_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

